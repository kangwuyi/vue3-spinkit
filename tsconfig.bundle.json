{
  "compilerOptions": {
    "baseUrl": "./src/components",
    "jsx": "preserve",
    "strict": true,
    "target": "ES2015",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"],
    "allowImportingTsExtensions": true,
    "declaration": false,
    "types": ["node"]
  },
  "include": ["./src/components"],
  "exclude": ["node_modules", "./src/vite-env.d.ts"]
}
